# Code Style Rules

# EditorConfig for C# projects

# Indentation and spacing
[*.{cs,js,html,css}]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C# specific settings
[*.cs]
csharp_style_var_for_built_in_types = true:suggestion
csharp_preferred_modifier_order = public,private,protected,internal,static,readonly,volatile,sealed,override,abstract,extern
dotnet_sort_system_directives_first = true

# Naming Conventions
dotnet_naming_style.async_methods.capitalization = async_suffix
dotnet_naming_style.interface_names.capitalization = interface_prefix
dotnet_naming_style.class_names.capitalization = pascal_case
dotnet_naming_style.enum_names.capitalization = pascal_case
dotnet_naming_style.delegate_names.capitalization = pascal_case
dotnet_naming_style.constant_names.capitalization = uppercase
dotnet_naming_style.readonly_field_names.capitalization = camel_case
dotnet_naming_style.private_field_names.capitalization = camel_case
dotnet_naming_style.static_readonly_field_names.capitalization = camel_case
dotnet_naming_style.local_function_names.capitalization = camel_case
dotnet_naming_style.parameters.capitalization = camel_case
dotnet_naming_style.type_parameters.capitalization = pascal_case
dotnet_naming_style.local_variables.capitalization = camel_case

